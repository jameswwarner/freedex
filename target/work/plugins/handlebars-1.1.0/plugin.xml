<plugin name='handlebars' version='1.1.0' grailsVersion='2.0 &gt; *'>
  <author>David Tinker</author>
  <authorEmail>david.tinker@gmail.com</authorEmail>
  <title>Handlebars Plugin</title>
  <description>Server side rendering of Handlebars templates
</description>
  <documentation>https://github.com/davidtinker/grails-handlebars</documentation>
  <type>HandlebarsGrailsPlugin</type>
  <resources>
    <resource>org.tinker.handlebars.HandlebarsService</resource>
    <resource>org.tinker.handlebars.HandlebarsTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <runtime>
      <dependency group='com.github.jknack' name='handlebars' version='0.4.2' />
    </runtime>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>